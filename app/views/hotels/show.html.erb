<div class="page-header">
  <%= link_to hotels_path, class: 'btn btn-default' do %>
    All Hotels
  <% end %>
  <%= link_to edit_hotel_path(@hotel), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show hotel</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @hotel.name %></dd>

  <dt>Location:</dt>
  <dd><%= @hotel.location %></dd>
</dl>
<h3>Inventory:</h3>
</br>
<dl class="dl-horizontal">
  <ul class="list-group">
    <% @hotel.room_types.each do |room| %>
      <li class="list-group-item <%= room.available ? 'active' : 'disabled' %>">
        <dd><%= room.name %></dd>
      </li>
    <% end %>
  </ul>
</dl>
